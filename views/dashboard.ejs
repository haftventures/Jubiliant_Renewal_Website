<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Dashboard</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body class="min-h-screen p-8 font-sans" >

<div class="min p-8 mt-2 mr-2 ml-2 mb-2 font-sans bg-orange-100 rounded-xl">

    <!-- FILTER TEXTBOXES -->
<div class="w-full flex justify-center mb-6">

    <!-- ROW WRAPPER -->
    <div class="flex flex-wrap items-end gap-4">

        <!-- Month -->
        <div class="flex flex-col">
            <label class="text-md font-semibold text-gray-600 mb-1">Month</label>
            <select id="ddlmonth"
                class="border border-gray-300 bg-gray-50 rounded-lg px-4 py-2.5 text-gray-700 w-full focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 cursor-pointer focus:outline-none">
                 <option value="1">January</option>
    <option value="2">February</option>
    <option value="3">March</option>
    <option value="4">April</option>
    <option value="5">May</option>
    <option value="6">June</option>
    <option value="7">July</option>
    <option value="8">August</option>
    <option value="9">September</option>
    <option value="10">October</option>
    <option value="11">November</option>
    <option value="12">December</option>                
            </select>
        </div>

        <!-- Year -->
        <div class="flex flex-col">
            <label class="text-md font-semibold text-gray-600 mb-1">Year</label>
            <select id="ddlyear"
                class="border border-gray-300 bg-gray-50 rounded-lg px-4 py-2.5 text-gray-700 w-full focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 cursor-pointer focus:outline-none">
               
            </select>
        </div>

        <!-- View Button -->
        <button id="btn_view"
            class="px-5 py-2 primary-button rounded-lg shadow">
            View
        </button>

    </div>
</div>


    <!-- TODAY -->
    <h5 class="text-neutral-900 text-lg mb-4 font-semibold">Today Overview</h5>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">

        <!-- LINK OPEN -->
        <div class="bg-blue-200 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl ">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">LINK OPEN</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_linkopen">0</p>
                </div>
                <i class="bi bi-link-45deg text-blue-600 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

        <!-- PAYMENT SUCCESS -->
        <div class="bg-green-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">PAYMENT SUCCESS</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_peymentsuccess">0</p>
                </div>
                <i class="bi bi-check-circle-fill text-green-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

        <!-- PAYMENT FAILED -->
        <div class="bg-red-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">PAYMENT FAILED</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_paymentfailed">0</p>
                </div>
                <i class="bi bi-x-circle-fill text-red-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-red-500 font-bold mt-2">
                ↓ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

        <!-- KYC -->
        <div class="bg-yellow-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">KYC</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_kyc">0</p>
                </div>
                <i class="bi bi-person-badge text-yellow-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-2">

        <!-- POLICY OPEN -->
        <div class="bg-cyan-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">POLICY OPEN</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_policyopen">0</p>
                </div>
<i class="bi bi-unlock-fill text-blue-600 text-4xl opacity-70"></i>            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

        <!-- POLICY -->
        <div class="bg-fuchsia-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">POLICY</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="today_policy">0</p>
                </div>
<i class="bi bi-shield-check text-blue-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

       
    </div>

    <!-- MONTHLY -->
    <h5 class="text-neutral-900 text-lg mt-8 mb-4 font-semibold ">Monthly Summary</h5>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">

        <!-- LINK OPEN -->
        <div class="bg-blue-200 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">LINK OPEN</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_linkopen">0</p>
                </div>
                <i class="bi bi-link-45deg text-blue-600 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 3.48% <span class="text-gray-500 text-xs font-normal">Since last month</span>
            </p>
        </div>

        <!-- PAYMENT SUCCESS -->
        <div class="bg-green-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">PAYMENT SUCCESS</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_paymentsuccess">0</p>
                </div>
                <i class="bi bi-check-circle-fill text-green-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-red-500 font-bold mt-2">
                ↓ 3.48% <span class="text-gray-500 text-xs font-normal">Since last week</span>
            </p>
        </div>

        <!-- PAYMENT FAILED -->
        <div class="bg-red-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">PAYMENT FAILED</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_paymentfailed">0</p>
                </div>
                <i class="bi bi-x-circle-fill text-red-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since last month</span>
            </p>
        </div>

        <!-- KYC -->
        <div class="bg-yellow-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">KYC</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_kyc">0</p>
                </div>
                <i class="bi bi-person-badge text-yellow-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 1.1% <span class="text-gray-500 text-xs font-normal">Since last month</span>
            </p>
        </div>

    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-2">

        <!-- POLICY OPEN -->
        <div class="bg-cyan-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">POLICY OPEN</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_policyopen">0</p>
                </div>
<i class="bi bi-unlock-fill text-blue-600 text-4xl opacity-70"></i>            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>

        <!-- POLICY -->
        <div class="bg-fuchsia-100 p-6 rounded-xl shadow-lg transition transform duration-300 hover:scale-105 hover:shadow-2xl">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-xs font-bold text-gray-400 tracking-wide">POLICY</p>
                    <p class="text-3xl font-extrabold text-gray-800" id="month_policy">0</p>
                </div>
<i class="bi bi-shield-check text-blue-500 text-4xl opacity-70"></i>
            </div>
            <p class="text-green-500 font-bold mt-2">
                ↑ 0% <span class="text-gray-500 text-xs font-normal">Since yesterday</span>
            </p>
        </div>       
    </div>
</div>
</body>
</html>
<script src="/assets/js/dashboard/dashboard_grid.js"></script>
<script src="/assets/js/common_scripts.js"></script>